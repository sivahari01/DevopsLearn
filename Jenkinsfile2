pipeline {
    agent any
    options {
        // Keep the last 5 builds
        buildDiscarder(logRotator(numToKeepStr: '2'))
    }
    environment {
        AWS_REGION = 'us-east-1'  // Set your preferred AWS region
    }
    stages {
        stage('Checkout') {
            steps {
               sh '''
                        ls
                        pwd
                        cd ..
                        pwd
                        ls
    
                        if [ -d "Terraform@tmp" ]; then
                            cd Terraform@tmp
                        else
                            echo "Error: 'Terraform@tmp' directory not found!"
                            exit 1
                        fi
                        
                        if [[ -z "$AWS_ACCESS_KEY_ID" || -z "$AWS_SECRET_ACCESS_KEY" ]]; then
                            echo "Error: AWS credentials are not set!"
                            exit 1
                        fi
                    
                        terraform destroy -auto-approve \
                          -var="AWS_ACCESS_KEY_ID=$AWS_ACCESS_KEY_ID" \
                          -var="AWS_SECRET_ACCESS_KEY=$AWS_SECRET_ACCESS_KEY"

                '''
                 
            }
        }
    } // Close stages block
  post {
        always {
            // Clean up workspace after every build
            cleanWs()
        }
    }
} // Close pipeline block
